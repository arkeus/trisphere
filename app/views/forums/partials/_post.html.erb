<div class="post cf">
	<div class="author">
		<span class="username"><%= name_link(post.user_id, class: "large") %></span><br>
		<% unless post.avatar.blank? %>
			<%= image_tag post.avatar, width: 100, height: 30, class: "avatar" -%><br>
		<% end %>
		<strong><%= post.posts %></strong> <span class="light">posts</span>
	</div>
	<div class="message">
		<div class="header cf">
			Posted <%= format_date(post.post_date) %>
			<div class="actions float-right">
				<%= link_to "Edit", { action: "index" }, class: "button" %>
				<%= link_to "Delete", { action: "index" }, class: "button" %>
			</div>
		</div>
		<div class="content">
			<%= post.message %>
		</div>
		<% unless post.signature.blank? -%>
		<div class="signature">
			<%= post.signature %>
		</div>
		<% end %>
	</div>
</div>
