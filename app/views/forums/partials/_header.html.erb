<div id="forum-header">
	<%= link_to "Forums", action: "index" %>
	<% if @category %>
		<span class="separator">&gt;</span>
		<%= link_to @category.name, action: "category", category_id: @category.id %>
	<% end %>
	<% if @topic %>
		<span class="separator">&gt;</span>
		<%= link_to @topic.subject, action: "topic", category_id: @category.id, topic_id: @topic.id %>
	<% end %>
	<% if defined?(ending) && !ending.blank? %>
		<span class="separator">&gt;</span> <%= ending %>
	<% end %>
</div>